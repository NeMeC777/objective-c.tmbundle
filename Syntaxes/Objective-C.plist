{
	name = "Objective-C";
	fileTypes = ( m, h );
	foldingStartMarker = "(/\\*\\*|\\{\\s*$)";
	foldingStopMarker = "(\\*\\*/|^\\s*\\})";
	increaseIndentPattern = "^.*(\\{[^}\"']*|\\([^)\"']*)$";
	smartTypingPairs = (
	   ( "(", ")" ), ( "[", "]" ), ( "{", "}" ),
	   ( "\"", "\"" ), ( "'", "'" )
	);
	highlightPairs = (
	   ( "(", ")" ), ( "[", "]" ), ( "{", "}" )
	);
	foregroundColor = "#000000";
	backgroundColor = "#FFFFFF";
	patterns = (
		{ name = "ObjectiveC String"; begin = "@\""; end = "\""; swallow = "\\\\."; foregroundColor = "#8B2252"; },
		{ name = "Keyword"; match = "\\<(id|BOOL|IBOutlet|IBAction|self|super|in|out|inout|oneway|YES|NO|nil)\\>"; fontStyle = ( bold ); foregroundColor = "blue"; },
		{ name = "Compiler Directive"; match = "@(catch|class||interface|implementation|protocol|selector|synchronized|try|end)\\>"; foregroundColor = "blue"; "fontStyle[1]" = ( underline ); },
		{ name = "Preprocessor Directive"; match = "^(\\s)*#\\s*(import)\\>"; fontStyle = ( bold ); foregroundColor = "#5C246E";},
		{ include = "C"; },
	);
}
